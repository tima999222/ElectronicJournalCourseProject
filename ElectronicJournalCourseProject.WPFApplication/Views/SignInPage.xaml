<Page x:Class="ElectronicJournalCourseProject.WPFApplication.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicJournalCourseProject.WPFApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage"
      Background="White">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="LoginTextBox" Height="25"></TextBox>
            <TextBlock Text="Пароль"></TextBlock>
            <TextBox x:Name="PasswordTextBox" Height="25"></TextBox>
            <Button x:Name="SignInButton" Margin="0 5 0 0" Height="25" Click="SignInButton_Click">Войти</Button>
            <CheckBox x:Name="IsTeacherCheckBox">Войти как преподаватель</CheckBox>
        </StackPanel>
    </Grid>
</Page>
